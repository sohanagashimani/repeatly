{
  "name": "repeatly",
  "private": true,
  "version": "1.0.0",
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "packages/database",
    "packages/api",
    "packages/frontend",
    "packages/scheduler",
    "packages/worker"
  ],
  "scripts": {
    "dev:api": "npm run dev --workspace=@repeatly/api",
    "dev:scheduler": "npm run dev --workspace=@repeatly/scheduler",
    "dev:worker": "npm run dev --workspace=@repeatly/worker",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "dev": "concurrently \"npm:dev:api\" \"npm:dev:scheduler\" \"npm:dev:worker\" \"npm:dev:frontend\"",
    "db:generate": "npm run db:generate --workspace=@repeatly/database",
    "db:migrate": "npm run db:migrate --workspace=@repeatly/database",
    "db:migrate:deploy": "npm run db:migrate:deploy --workspace=@repeatly/database",
    "db:push": "npm run db:push --workspace=@repeatly/database",
    "db:studio": "npm run db:studio --workspace=@repeatly/database",
    "lint": "eslint packages/api packages/scheduler packages/worker --ext .ts --max-warnings=0 && eslint packages/frontend --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint packages/api packages/scheduler packages/worker --ext .ts --fix && eslint packages/frontend --ext .ts,.tsx --fix",
    "lint:api": "eslint packages/api --ext .ts --max-warnings=0",
    "lint:api:fix": "eslint packages/api --ext .ts --fix",
    "lint:scheduler": "eslint packages/scheduler --ext .ts --max-warnings=0",
    "lint:scheduler:fix": "eslint packages/scheduler --ext .ts --fix",
    "lint:worker": "eslint packages/worker --ext .ts --max-warnings=0",
    "lint:worker:fix": "eslint packages/worker --ext .ts --fix",
    "lint:frontend": "eslint packages/frontend --ext .ts,.tsx --max-warnings=0",
    "lint:frontend:fix": "eslint packages/frontend --ext .ts,.tsx --fix",
    "build": "turbo run build",
    "build:database": "turbo run build --filter=@repeatly/database",
    "build:api": "turbo run build --filter=@repeatly/api",
    "build:scheduler": "turbo run build --filter=@repeatly/scheduler",
    "build:worker": "turbo run build --filter=@repeatly/worker",
    "build:frontend": "turbo run build --filter=@repeatly/frontend",
    "build:all": "turbo run build",
    "generate:openapi": "cd scripts && npm run generate:openapi",
    "docker:build:database": "docker build -f packages/database/Dockerfile -t repeatly-database .",
    "docker:build:api": "docker build -f packages/api/Dockerfile -t repeatly-api .",
    "docker:build:scheduler": "docker build -f packages/scheduler/Dockerfile -t repeatly-scheduler .",
    "docker:build:worker": "docker build -f packages/worker/Dockerfile -t repeatly-worker .",
    "docker:build:all": "npm run docker:build:api && npm run docker:build:scheduler && npm run docker:build:worker",
    "postinstall": "npm run build --workspace=@repeatly/database",
    "infra": "docker-compose up -d"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.5"
  },
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "dotenv": "^16.5.0",
    "prisma": "^6.10.1"
  }
}
